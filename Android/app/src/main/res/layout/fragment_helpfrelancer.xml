<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment1.Helpfrelancer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="250dp"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:background="@drawable/border_card"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cara penggunaan:"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Pilih Job yang anda inginkan"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Lihat detail informasi job"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Klik tombol applied"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Setelah applied anda harus menunggu si pemilik job untuk approve"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Jika sampai batas waktu tidak di approve maka anda tidak akan mendapatkan notifikasi"/>

    </LinearLayout>

</FrameLayout>